<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/loan_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loan Amount"
        android:inputType="numberDecimal"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/interest_rate_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Interest Rate (%)"
        android:inputType="numberDecimal"
        android:layout_below="@id/loan_amount_input"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/loan_term_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loan Term (years)"
        android:inputType="number"
        android:layout_below="@id/interest_rate_input"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_below="@id/loan_term_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/monthly_payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/calculate_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/total_payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/monthly_payment_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <TextView

        android:id="@+id/texttitle"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"

        android:layout_marginEnd="104dp"

        android:layout_marginBottom="58dp"

        android:fontFamily="cursive"
        android:text="38HuynhNhatTrung"
        android:textColor="#530E1B"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
